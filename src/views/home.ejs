<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>Home Page</title>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font: 400 16px Arial;
    }

    button {
      cursor: pointer;
    }

    div.container {
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: rgb(29, 29, 204);
    }

    div.container main {
      padding: 30px 50px;
      background-color: white;
      border-radius: 12px;
      text-align: center;
    }

    div.container main h1 {
      margin-bottom: 30px;
    }

    div.container main button {
      margin-top: 10px;
      margin-bottom: 10px;
      padding: 10px 80px;
      border: 0;
      border-radius: 8px;
      background-color: rgb(83, 224, 114);
      font-weight: 600;
      font-size: 16px;
      color: white;
      transition: background-color 0.2s;
    }

    div.container main button:hover {
      background-color: rgb(14, 175, 49);
    }
  </style>
</head>

<body>
  <div class="container">
    <main>
      <h1 id="welcomeMessage">Bem vindo</h1>

      <button type="button" onclick="handleLogout()">Logout</button>
    </main>
  </div>

  <script>
    const h1 = document.getElementById('welcomeMessage');

    const username = localStorage.getItem('username');

    if (username) {
      h1.innerText = `Bem-vindo ${username}`;
    } else {
      window.location.href = '/';
    }

    function handleLogout() {
      localStorage.removeItem('username');

      window.location.href = '/';
    }
  </script>
</body>

</html>
